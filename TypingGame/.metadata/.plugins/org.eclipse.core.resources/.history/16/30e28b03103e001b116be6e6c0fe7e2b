package typing_game20;

public class Word { 
	private String word; //단어
	private int x, y;
	private int effect; //효과 0:기본 1:폭탄 2:시간멈춤 3:X2
	
	public Word(String word, int x, int y,  int effect) {
		this.word = word;
		this.x = x;
		this.y = y;
		
		this.effect = effect;
	}
	
	public void setPosition(int x, int y) {
		this.x = x;
		this.y = y;
	}
	
	public void setWord(String word) {
		this.word = word;
	}
	
	public int getX() {
		return x;
	}
	
	public int getY() {
		return y;
	}
	
	public String getWord() {
		return word;
	}
	
	public int getEffect() {
		return effect;
	}
}
